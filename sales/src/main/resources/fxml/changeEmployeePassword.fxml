<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mahmoud.sales.controller.ChangeEmployeePasswordController"
           stylesheets="@/css/person-module.css"
           styleClass="dialog-root">

    <VBox spacing="14" styleClass="dialog-card" prefWidth="520">
        <VBox spacing="4">
            <Text text="Change Password" styleClass="dialog-title"/>
            <Label text="Enter new password and confirm it." styleClass="muted"/>
        </VBox>

        <Separator/>

        <GridPane hgap="12" vgap="12">
            <Label text="New Password" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <PasswordField fx:id="newPasswordField" promptText="New password" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Confirm Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn"/>
            <Button text="Save Password" onAction="#handleSavePassword" styleClass="btn btn-primary"/>
        </HBox>
    </VBox>
</StackPane>
