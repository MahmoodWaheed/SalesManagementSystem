<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.mahmoud.sales.controller.ViewPersonController" spacing="10" alignment="CENTER">
    <Label text="View Person Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Name:" />
    <TextField fx:id="nameField" editable="false" />

    <Label text="Location:" />
    <TextField fx:id="locationField" editable="false" />

    <Label text="Type:" />
    <TextField fx:id="typeField" editable="false" />

    <Label text="Open Balance:" />
    <TextField fx:id="balanceField" editable="false" />

    <Button text="Close" onAction="#handleClose"/>
</VBox>
