<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mahmoud.sales.controller.PhoneController">
    <children>
        <TableView fx:id="phoneTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="phoneNumberColumn" text="Phone Number"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
            <TextField fx:id="employeeIdField" promptText="Employee ID (Optional)"/>
            <TextField fx:id="personIdField" promptText="Person ID (Optional)"/>
            <Button fx:id="addButton" text="Add" onAction="#addPhone"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#deletePhone"/>
        </HBox>
    </children>
</VBox>
