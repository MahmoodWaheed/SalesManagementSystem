<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mahmoud.sales.controller.AddItemController"
           stylesheets="@/css/person-module.css"
           styleClass="dialog-root">

    <VBox spacing="14" styleClass="dialog-card" prefWidth="520">
        <VBox spacing="4">
            <Text text="Add New Item" styleClass="dialog-title"/>
            <Label text="Enter item information below." styleClass="muted"/>
        </VBox>

        <Separator/>

        <GridPane hgap="12" vgap="12">
            <Label text="Item Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="e.g. Cement 50kg" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Description" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionField" promptText="Optional description..." prefRowCount="3"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Balance" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="balanceField" promptText="e.g. 120" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Selling Price" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="sellingPriceField" promptText="e.g. 350.00" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Purchasing Price" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="purchasingPriceField" promptText="e.g. 320.00" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn"/>
            <Button text="Save Item" onAction="#handleSaveItem" styleClass="btn btn-primary"/>
        </HBox>
    </VBox>
</StackPane>
