<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mahmoud.sales.controller.AddEmployeeController"
           stylesheets="@/css/person-module.css"
           styleClass="dialog-root">

    <VBox spacing="14" styleClass="dialog-card" prefWidth="620">
        <VBox spacing="4">
            <Text text="Add New Employee" styleClass="dialog-title"/>
            <Label text="Enter employee details below." styleClass="muted"/>
        </VBox>

        <Separator/>

        <GridPane hgap="12" vgap="12">
            <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="Employee name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Role" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="roleField" promptText="e.g. Sales Rep" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" promptText="example@domain.com" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Password" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Phone Number" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" promptText="e.g. 010xxxxxxxx" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn"/>
            <Button text="Save" onAction="#handleSaveEmployee" styleClass="btn btn-primary"/>
        </HBox>
    </VBox>
</StackPane>
