<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mahmoud.sales.controller.AddSupplierController"
           stylesheets="@/css/person-module.css"
           styleClass="dialog-root">

    <VBox spacing="14" styleClass="dialog-card" prefWidth="560">
        <VBox spacing="4">
            <Text text="Add New Supplier" styleClass="dialog-title"/>
            <Label text="Enter supplier details below." styleClass="muted"/>
        </VBox>

        <Separator/>

        <GridPane hgap="12" vgap="12">
            <Label text="Supplier Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="Enter supplier name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Location" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="locationField" promptText="Enter location" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Open Balance" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="balanceField" promptText="Enter open balance" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Phone Number" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" promptText="e.g. 010xxxxxxxx" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" styleClass="btn"/>
            <Button text="Save" onAction="#handleSaveSupplier" styleClass="btn btn-primary"/>
        </HBox>
    </VBox>
</StackPane>
